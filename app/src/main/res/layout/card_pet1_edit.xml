<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-40dp"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_marginTop="-25dp"
            android:background="@drawable/img_pet_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.8
            "/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/pet1_card_image"
            android:src="@drawable/img_pet1_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="196dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="달리"
                android:textSize="35dp"
                android:textColor="@color/text_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:layout_marginTop="110dp"
                android:id="@+id/pet1_card_change_on_edit_photo_btn"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/img_ic_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/pet1_card_finish_edit_btn"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_on_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                />


        </LinearLayout>


        <FrameLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="245dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black"/>

            <EditText
                android:textSize="15dp"
                android:hint="달리"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:paddingTop="0dp" />

            <TextView
                android:text="성별"
                android:layout_marginLeft="140dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <EditText
                android:textSize="15dp"
                android:layout_marginLeft="200dp"
                android:hint="남자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:id="@+id/edt_gender"
                android:textIsSelectable="false"
                android:paddingTop="0dp" />
            <TextView
                android:text="품종"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <EditText
                android:textSize="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:text="포메라니안"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:paddingTop="0dp" />

            <TextView
                android:text="나이"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <EditText
                android:textSize="15dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:text="4개월"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:paddingTop="0dp" />


            <TextView
                android:text="RFID code"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:text="41018009362"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />

            <TextView
                android:text="등록 번호"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="100dp"
                android:layout_marginTop="150dp"
                android:text="41018009362"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="비문"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <ImageButton
                android:id="@+id/pet1_fingerprint_btn"
                android:background="@drawable/ic_fingerprint"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="197dp"
                android:text="taeji@naver.com"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textColor="@color/text_gray" />

            <TextView
                android:text="특징"
                android:layout_marginTop="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <EditText
                android:textSize="15dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="250dp"
                android:text="왼쪽 다리에 상처가 있음"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>


        <FrameLayout
            android:layout_marginBottom="60dp"
            android:background="@color/text_white"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <ImageView
                android:background="@drawable/img_card_below"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </FrameLayout>

        <View
            android:layout_marginTop="332dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <View
            android:layout_marginTop="477dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <View
            android:layout_marginBottom="88dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </FrameLayout>


</LinearLayout>