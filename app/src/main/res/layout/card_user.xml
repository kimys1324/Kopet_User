<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_marginTop="-15dp"
            android:background="@drawable/img_usr_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY="0.8
            "/>

        <ImageView
            android:layout_marginTop="10dp"
            android:scaleX="1.05"
            android:id="@+id/usercard_image"
            android:src="@drawable/img_usr_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="196dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="홍태지"
                android:textSize="35dp"
                android:textColor="@color/text_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="150dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/usercard_report_missing_btn"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/img_ic_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/usercard_edit_btn"
                android:layout_marginRight="10dp"
                android:background="@drawable/img_ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                />


        </LinearLayout>


        <FrameLayout
            android:layout_marginLeft="80dp"
            android:layout_marginTop="255dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black"/>

            <TextView
                android:layout_marginLeft="60dp"
                android:text="홍태지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />

            <TextView
                android:text="생일"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_marginTop="50dp"
                android:text="920608"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />

            <TextView
                android:text="성별"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:text="여자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />


            <TextView
                android:text="거주지"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:text="서울시 서대문구"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />

            <TextView
                android:text="연락처"
                android:layout_marginTop="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_marginTop="150dp"
                android:text="010-8801-0392"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="이메일"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_black" />

            <TextView
                android:layout_marginLeft="60dp"
                android:layout_marginTop="200dp"
                android:text="taeji@naver.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray" />


        </FrameLayout>


        <FrameLayout
            android:layout_marginBottom="60dp"
            android:background="@color/text_white"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <ImageView
                android:background="@drawable/img_card_below"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </FrameLayout>


        <View
            android:layout_marginBottom="82dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </FrameLayout>


</LinearLayout>