<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_inform_bar"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_large_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="이메일"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_id"
            android:layout_gravity="center_vertical"
            android:hint="아이디로 사용됩니다"
            android:textSize="13dp"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_large_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="비밀번호"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_pwd"
            android:layout_gravity="center_vertical"
            android:hint="비밀번호"
            android:textSize="13dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:password="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_large_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="비밀번호 확인"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_pwd_chk"
            android:layout_gravity="center_vertical"
            android:hint="다시한번 입력해주세요"
            android:textSize="13dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:password="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_large_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="이름"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_name"
            android:layout_gravity="center_vertical"
            android:hint="공백 없이 입력해주세요"
            android:textSize="13dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_large_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="주소"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_adr"
            android:layout_gravity="center_vertical"
            android:hint="예) 서울시 서대문구"
            android:textSize="13dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_short_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="성별"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_gender"
            android:layout_gravity="center_vertical"
            android:hint="남성 여성"
            android:textSize="13dp"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_short_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="생년월일"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_birth"
            android:layout_gravity="center_vertical"
            android:hint="예) 920608"
            android:textSize="13dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/img_short_whtbx">

        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="13dp"
            android:text="전화번호"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_dark_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/inform_usr_number"
            android:layout_gravity="center_vertical"
            android:hint="전화번호"
            android:textSize="13dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/inform_nxt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_agreement_next"/>


    </FrameLayout>


</LinearLayout>